<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/touchpad"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.grdgyyr.controlio.Fragments.FragmentTouchpad">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_left_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:background="#778899" />

            <Button
                android:id="@+id/btnKeyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:drawableBottom="@drawable/ic_menu_keyboard"/>

            <Button
                android:id="@+id/btn_right_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:background="#778899" />


        </LinearLayout>

        <EditText
            android:id="@+id/edit_board_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:cursorVisible="false"
            android:hint="Keyboard"
            android:textAlignment="center"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:id="@+id/touch_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentStart="true"
        android:background="#eeeed1"
        android:visibility="visible" />


</RelativeLayout>
