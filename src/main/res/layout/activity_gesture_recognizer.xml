<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_gesture_recognizer"
    android:orientation="vertical"
    tools:openDrawer="start"
    >

    <!--TOOLBAR here-->





        <LinearLayout
            android:id="@+id/ll_button_container"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="20dp"

            android:orientation="vertical"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar_CreateGesture"
                    android:layout_gravity="right"
                    android:layout_alignTop="@+id/button_create_gesture"
                    android:layout_alignRight="@+id/button_create_gesture"
                    android:layout_alignLeft="@+id/button_create_gesture"
                    android:layout_alignBottom="@+id/button_create_gesture"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"

                    android:progressDrawable="@drawable/progressbar_new_gesture" />

                <Button
                    android:id="@+id/button_create_gesture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_new_gesture"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/button_size"

                    android:enabled="true"/>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar_Identify"
                    android:layout_gravity="right"
                    android:layout_alignTop="@+id/button_identify"
                    android:layout_alignRight="@+id/button_identify"
                    android:layout_alignLeft="@+id/button_identify"
                    android:layout_alignBottom="@+id/button_identify"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"

                    android:progressDrawable="@drawable/progressbar_identify"/>

                <Button
                    android:id="@+id/button_identify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_identify"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/button_size"

                    android:layout_marginTop="6dp"
                    android:enabled="true"/>


            </RelativeLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/lvGesture">



            </ListView>

        </LinearLayout>








</RelativeLayout>
