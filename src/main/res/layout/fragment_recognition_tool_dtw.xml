<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.RecognitionToolDTW">

    <TextView
        android:id="@+id/tv_rt_dtw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dymanic Time Wrapping settings" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_rt_dtw_title">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/chb_rt_dtw_adjustment_window_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adjustment Window Condition"
                android:textColor="@color/rt_text"
                android:textSize="@dimen/rt_text_size"
                android:enabled="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Bounding envelope)"
                android:textStyle="italic"
                android:textColor="@color/rt_text"
                android:textSize="16sp"
                android:layout_below="@+id/chb_rt_dtw_adjustment_window_condition"
                android:layout_marginLeft="32dp"/>

            <Spinner
                android:id="@+id/s_rt_dtw_window_conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/chb_rt_dtw_adjustment_window_condition"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
